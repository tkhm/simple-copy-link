{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "semicolon": {
            "severity": "warning",
            "options": ["never"]
        },
        "no-implicit-dependencies": [true, "dev"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
