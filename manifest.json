{
  "name": "SLink - Simple copy link",
  "description": "Copy page link and title, so simple!",
  "version": "0.1",
  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    }
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "commands": {
    "copy-as-plaintext": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Copy tabTitle/tabUrl as Plaintext"
    },
    "copy-as-markdown": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Copy tabTitle/tabUrl as Markdown"
    }
  },
  "manifest_version": 2
}
